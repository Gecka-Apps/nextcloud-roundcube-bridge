{
  "name": "gecka/nextcloud-app-mail-roundcube-bridge",
  "description": "Nextcloud integration bridge for RoundCube",
  "type": "project",
  "license": "AGPL-3.0-or-later",
  "authors": [
    {
      "name": "Laurent Dinclaux",
      "email": "laurent@gecka.nc"
    }
  ],
  "require": {},
  "require-dev": {
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.*"
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1.0"
    }
  },
  "scripts": {
    "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
    "phpcs": "vendor/bin/phpcs",
    "phpmd": "vendor/bin/phpmd lib/,appinfo/,templates/ text .phpmd.xml"
  }
}
